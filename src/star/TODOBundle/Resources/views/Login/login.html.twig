{% extends "base.html.twig" %}

{% block title %}Авторизация{% endblock %}

{% block body %}


    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {% if errors %}
                    <div class="alert alert-danger">
                        {{ errors.messageKey }}
                    </div>
                {% endif %}
                <h1>Авторизация</h1>

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label class="control-label required" for="_username">Логин</label>
                        <input type="text" name="_username" id="_username" value="{{ username }}" required="required" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label required" for="_password">Пароль</label>
                        <input type="text" name="_password" id="_password" required="required" class="form-control" />
                        </div>
                        <div class="form-group">
                            <a href="{{ path('register') }}"><button type="button" class="btn btn-warning pull-left">Регистрация</button></a>
                        <button class="btn btn-success pull-right">Авторизация</button>
                        </div>
                    </form>

        </div>
    </div>
    </div>
{% endblock %}
